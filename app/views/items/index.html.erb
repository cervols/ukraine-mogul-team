<% content_for :header do %>
<section class="main menu">
  <div class="bg-warning" >
    <div class="container">
      <div class="row">
        <h2 class="title text-black mb-4">
          Buy or sell sport goods with us
        </h2>
      </div>
    </div>
  </div>
</section>
<% end %>

<div class="item-index-grid mt-5">
  <% @items.each do |item| %>

    <div class="item">
      <div class="item-thumb m-2">
      <%= link_to image_tag(item.image_url(:thumb)), item %>

      <% if item.condition? %>
        <div class="condition">
          <span class="bg-secondary text-light p-1"><%= item.condition %></span>
        </div>
      <% end %>
      </div>

    <div class="p-2">

      <h4 class="title"><%= link_to item.title, item %></h3>

      <p class="seller">Sold by <%= item.user.name %></p>
      <p class="price"><%= number_to_currency(item.price) %></p>

      <% if item_author(item) %>
        <%= link_to "Edit", edit_item_path(item), class: "btn btn-warning" %>
        <%= link_to "Delete", item, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>