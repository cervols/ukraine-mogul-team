<section class="section item-show">
  <div class="row">
    <div class="col">
      <h1 class="title mt-5"><%= @item.title %></h1>

      <ul class="list-group list-group-horizontal-xl">
        <% if @item.brand? %>
          <li class="list-group-item"><%= @item.brand %></li>
        <% end %>

        <% if @item.condition? %>
          <li class="list-group-item"><%= @item.condition %></li>
        <% end %>
      </ul>

      <div class="feature-image">
        <%= image_tag(@item.image_url(:default)) %>
      </div>


      <h3 class="mt-5">Description</h3>
      <%= @item.description %>

      <h3 class="mt-5">Product Specs</h3>

      <table class="table">
        <% if @item.condition %>
        <tr>
          <td>Condition:</td>
          <td><%= @item.condition %></td>
        </tr>
        <% end %>

        <% if @item.color %>
          <tr>
            <td>Color:</td>
            <td><%= @item.color %></td>
          </tr>
        <% end %>

        <% if @item.brand %>
          <tr>
            <td>Brand:</td>
            <td><%= @item.brand %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="col-4 offset-md-1 text-center">
      <div class="mt-5">
        <h4 class="title"><%= number_to_currency(@item.price) %></h4>
        <p>Sold by <%= @item.user.name %></p>
        <%= button_to "Add to cart", positions_path(item_id: @item), class: "btn btn-danger add-to-cart" %>
      </div>
    </div>
  </div>

  <% if item_author(@item) %>
    <%= link_to "Edit", edit_item_path(@item), class: "btn btn-warning" %>
  <% end %>
</section>