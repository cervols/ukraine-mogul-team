<div class="row">
  <div class="col text-center mx-2 align-middle">
    <%= position.quantity %>
  </div>

  <div class="col-3">
    <figure>
      <%= image_tag(position.item.image_url(:thumb), class:"img-thumbnail") %>
    </figure>
  </div>

  <div class="col-8">
    <div class="row">
	  	<div class="col-lg-7 col-xl-8">
		  	<h4 class="mt-3 font-weight-bold"><%= position.item.title %></h4>
	      <p class="mt-3">
	        <%= truncate(position.item.description, length: 140) %>
      	</p>
      </div>

      <div class="col-3 text-right mt-3">
        <strong ><%= number_to_currency(position.total_price) %></strong>
      </div>

    </div>
  </div>
</div>

<div class="text-right">
  <%= link_to "Remove Item", position, method: :delete, data: { confirm: "Are you sure? " }, class: "btn btn-outline-primary btn-sm" %>
</div>

<hr/ >